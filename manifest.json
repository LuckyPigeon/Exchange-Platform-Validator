{
    "manifest_version": 3,
    "name": "Exchange Validator",
    "description": "Validate the cryptocurrency exchange plotform",
    "version": "1.0",
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_icon": {
            "16": "./images/checked16.png",
            "32": "./images/checked32.png",
            "128": "./images/checked128.png"
        },
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "./images/checked16.png",
        "32": "./images/checked32.png",
        "128": "./images/checked128.png"
    },
    "permissions": ["tabs"]
}